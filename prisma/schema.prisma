datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // set this in your .env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  role      String
  classes   Class[]  // <-- remove @relation and references here
  createdAt DateTime @default(now())
}

model Class {
  id          String   @id @default(cuid())
  name        String
  description String?
  users       User[]   // <-- remove @relation and references here
}